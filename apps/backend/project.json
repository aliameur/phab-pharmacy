{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:builds"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "reset",
      "configurations": {
        "up": {
          "command": "docker-compose up -d"
        },
        "down": {
          "command": "docker-compose down"
        },
        "reset": {
          "commands": [
            "docker-compose down",
            "docker-compose up -d"
          ],
          "parallel": false
        }
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "check",
      "configurations": {
        "check": {
          "command": "prettier --list-different \"{projectRoot}/**/*.{js,jsx,ts,tsx,css,scss,md,json}\""
        },
        "fix": {
          "command": "prettier --write \"{projectRoot}/**/*.{js,jsx,ts,tsx,css,scss,md,json}\""
        }
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputFile}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/index.js",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": [
          "apps/backend/src/assets",
          {
            "glob": "medusa-config.js",
            "input": "apps/backend",
            "output": "/"
          },
          {
            "glob": "index.js",
            "input": "apps/backend",
            "output": "/"
          }
        ],
        "rootDir": "apps/backend/src",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true
        }
      }
    },
    "dev": {
      "command": "medusa develop",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "medusa migrations run"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "command": "cd dist/apps/backend && medusa migrations run && medusa start"
        }
      }
    },
    "seed": {
      "command": "medusa seed -f data/seed.json",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "serve-app": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "backend:build-app"
      }
    },
    "build-app": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "main": "apps/backend/index.js",
        "generatePackageJson": true,
        "additionalEntryPoints": [
          "apps/backend/medusa-config.js"
        ],
        "format": [
          "cjs"
        ],
        "tsConfig": "apps/backend/tsconfig.app.json",
        "outputPath": "dist/apps/backend",
        "assets": [
          "apps/backend/src/assets",
          {
            "glob": "medusa-config.js",
            "input": "apps/backend",
            "output": "../"
          }
        ]
      }
    },
    "builds": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputFile}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/api-service/dist",
        "main": "apps/api-service/src/index.ts",
        "tsConfig": "apps/api-service/tsconfig.app.json",
        "assets": [
          "apps/api-service/src/assets",
          {
            "glob": "medusa-config.js",
            "input": "apps/api-service",
            "output": "../"
          }
        ],
        "rootDir": "apps/api-service/src",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true
        }
      }
    }
  },
  "tags": []
}
